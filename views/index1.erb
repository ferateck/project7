<h1>Holidays of the date entered</h1>
<ul>
  <% @holidays.each do |day| %>
    <li> <%= day["name"] %>
       <%= day["date"] %>
       <%= day["country"] %>
    </li>
  <% end %>
</ul>


<%= params %>
<form>
  <select name="month" value="<%= params['month'] %>">
    <option value="1" <%= 'selected="selected"' if params['month'] == '1' %>>January</option>
    <option value="2" <%= 'selected="selected"' if params['month'] == '2' %>>Febuary</option>
    <option value="3" <%= 'selected="selected"' if params['month'] == '3' %>>March</option>
    <option value="4" <%= 'selected="selected"' if params['month'] == '4' %>>April</option>
    <option value="5" <%= 'selected="selected"' if params['month'] == '5' %>>May</option>
    <option value="6" <%= 'selected="selected"' if params['month'] == '6' %>>June</option>
    <option value="7" <%= 'selected="selected"' if params['month'] == '7' %>>July</option>
    <option value="8" <%= 'selected="selected"' if params['month'] == '8' %>>August</option>
    <option value="9" <%= 'selected="selected"' if params['month'] == '9' %>>September</option>
    <option value="10" <%= 'selected="selected"' if params['month'] == '10' %>>October</option>
    <option value="11" <%= 'selected="selected"' if params['month'] == '11' %>>November</option>
    <option value="12" <%= 'selected="selected"' if params['month'] == '12' %>>December</option>
  </select>
  <select name="country" value="<%= params['country'] %>">
    <option value="US" <%= 'selected="selected"' if params['country'] == 'US' %>>USA</option>
    <option value="GB" <%= 'selected="selected"' if params['country'] == 'GB' %>>Great Britain</option>
    <option value="BR" <%= 'selected="selected"' if params['country'] == 'BR' %>>Brazil</option>
    <option value="BE" <%= 'selected="selected"' if params['country'] == 'BE' %>>Belgium</option>
  </select>
  Pick a Year:<input type="number" name="year" value="<%= params[:year] %>" required>
  <button type="submit">Submit</button>
</form>